@import '_mixins'

.modal-background
	position fixed
	top 0px
	left 0px
	right 0px
	bottom 0px
	z-index 10000
	background-color rgba(#232323,0.2)
	opacity 1
	backdrop-filter blur(3px) grayscale(0.8)
	&.hidden
		opacity 0

.modal-container
	position fixed
	top 0px
	left 0px
	right 0px
	bottom 0px
	z-index 10000
	padding 50px
	overflow-y auto
	opacity 1
	df()
	fdc()
	ai('c')
	&.hidden
		opacity 0
		.modal-dialog
			transform scale(0,0)
			filter opacity(0)
			-webkit-filter opacity(0)
	&.scrollinside
		.modal-dialog
			max-height unset
			.modal-content
				overflow visible
	.modal-dialog
		df()
		fdc()
		pointer-events initial
		min-width 375px
		max-width 90%
		max-height 90%
		margin auto
		background-color white
		transition .3s transform, .3s filter
		transform scale(1,1)
		filter: opacity(1)
		-webkit-filter: opacity(1)
		background-color white
		box-shadow 0px 0px 15px 0px rgba(0,0,0,0.1)
		.modal-header
			df()
			fdr()
			fw()
			position relative
			padding 35px 65px 15px 55px
			.modal-header-close
				df()
				fdc()
				ai('c')
				jc('c')
				position absolute
				top 20px
				right 20px
				border none
				outline none
				cursor pointer
				width 40px
				height 40px
				padding 10px
				color #232323
				font-size 0px
				opacity 1
				background-color rgba(0,0,0,0)
				svg
					pen()
			.modal-header-title
				df()
				fg(1)
				jc('s')
				color #232323
				margin 0px
				font-size 36px
				font-weight 800
				line-height 49px
		.modal-content
			df()
			fdr()
			fw()
			padding 15px 55px 0px 55px
			.form
				df()
				fdc()
				.input
					dif()
					fdc()
					width 100%
					margin-bottom 15px
					input
					textarea
						padding 10px 15px
						border 1px solid #c0c0c0
						background-color #e5e5e5
						color #c0c0c0
						font-size 14px
						font-weight 400
						line-height 20px
						&:-webkit-autofill
						&:-webkit-autofill:hover
						&:-webkit-autofill:focus
							box-shadow inset 0px 0px 0px 50px #e5e5e5
							-webkit-text-fill-color #232323
						&.error
							pha(color,#ff0000)
							border-color #ff0000
							& ~ .error-msg
								font-size 11.5px
								margin-top 5px
						&[required]
							& ~ label
								&:after
									content '*'
									color #ff0000
									margin-left .2em
					textarea
						resize none
						height 100px
					.error-msg
						order 3
						margin 0px
						color #ff0000
						font-size 0px
						transition .3s linear
				.spp-input
					width 100%
					input[type="checkbox"]
						order 1
						width 0px
						height 0px
						margin 0px
						padding 0px
						opacity 0
						&:active
						&:hover
						&:focus
							& ~ label
								.indicator
									&:after
										opacity 0.3
						&:checked
							& ~ label
								.indicator
									&:after
										opacity 1
						& ~ label
							order 2
							position relative
							margin 10px 0px 0px 0px
							width 100%
							padding 5px 0px 5px 30px
							color #232323
							font-size 14px
							a
								color inherit
								text-decoration underline
							.indicator
								position absolute
								z-index 1
								top 0px
								left 0px
								bottom 0px
								margin auto 0px
								width 20px
								height 20px
								border 1px solid #232323
								&:after
									content ''
									position absolute
									top 0px
									left 0px
									right 0px
									bottom 2px
									width 6px
									height 12px
									margin auto
									border-width 0px 2px 2px 0px
									border-style solid
									border-color #232323
									transform rotate(45deg)
									opacity 0
									transition opacity .1s linear
						&.error
							& ~ label
								color #ff0000
								.indicator
									border-color #ff0000
		.modal-footer
			df()
			fdr()
			jc('c')
			padding 15px 55px 30px 55px
			.button
				width 100%


@media screen and (max-width 992px)
	.modal-container
		cursor pointer

@media screen and (max-width 767px)
	.modal-container
		.modal-dialog
			max-width 100%
			max-height 100%

@media screen and (max-width 560px)
	.modal-container
		.modal-dialog
			.modal-header
				padding 10px 45px 10px 25px
				.modal-header-title
					font-size 24px
					line-height 40px
				.modal-header-close
					top 10px
					right 5px
			.modal-content
				padding 10px 25px 0px 25px
			.modal-footer
				padding 10px 25px 20px 25px